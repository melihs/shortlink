        "properties": {
          "url": {
            "bsonType": "string",
            "description": "URL must be type string"
          },
          "hash": {
            "bsonType": "string",
            "description": "hash must be type string"
          },
          "describe": {
            "bsonType": "string",
            "description": "describe must be type string"
          },
          "created_at": {
            "bsonType": "timestamp",
