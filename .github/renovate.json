{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "bump",
  "baseBranches": ["main"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "docker-compose": {
    "fileMatch": [
      "**/ops/docker-compose/*.yaml"
    ],
    "matchStrings": [
      "image: (.*)"
    ]
  }
}
