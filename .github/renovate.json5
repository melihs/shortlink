{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "bump",
  "baseBranches": ["main"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "commitBody": "Signed-off-by: {{{gitAuthor}}}",
  "commitMessage": "chore(deps): update {{{depName}}} to {{{newVersion}}}"
  "docker-compose": {
    "fileMatch": [
      "^.*\/?ops\/docker-compose\/.*\.ya?ml$"
    ]
  }
}
